{
  "name": "redlark-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:win": "tauri build --target x86_64-pc-windows-msvc",
    "build:mac": "tauri build --target x86_64-apple-darwin",
    "build:mac-arm": "tauri build --target aarch64-apple-darwin",
    "build:mac-universal": "tauri build --target universal-apple-darwin",
    "build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "build:all": "npm run build:win && npm run build:mac-universal && npm run build:linux",
    "build:current": "tauri build",
    "bundle:win": "tauri build --target x86_64-pc-windows-msvc --bundles msi,nsis",
    "bundle:mac": "tauri build --target universal-apple-darwin --bundles app,dmg",
    "bundle:linux": "tauri build --target x86_64-unknown-linux-gnu --bundles deb,appimage",
    "bundle:all": "npm run bundle:win && npm run bundle:mac && npm run bundle:linux",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "^2.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "pnpm": "^10.13.1",
    "postcss": "^8.5.6",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
